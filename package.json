{
  "name": "github-pr-metrics",
  "version": "1.0.0",
  "description": "A comprehensive metrics collection and reporting tool that analyzes GitHub Pull Request feedback effectiveness with professional report generation",
  "main": "dist/index.js",
  "bin": {
    "github-pr-metrics": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:action": "npm run build && ncc build dist/action.js -o dist-action --minify --no-source-map-register",
    "start": "node dist/cli/index.js",
    "dev": "ts-node src/cli/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "github",
    "metrics",
    "pull-request",
    "ai-reviewer",
    "coderabbit",
    "analytics",
    "reporting",
    "markdown",
    "json",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^8.0.0",
    "eslint-config-standard": "^17.1.0",
    "fast-check": "^3.15.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@actions/core": "^2.0.2",
    "@actions/github": "^7.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.6.0",
    "commander": "^11.0.0",
    "dotenv": "^16.3.0",
    "jsonwebtoken": "^9.0.3"
  }
}
